  <div class="cart-container">
    <div class="shooping-basket-items">

      <!-- item pictures -->
      <!-- <div class="cart-pictures">

    </div> -->

      <!-- item names -->
      <div class="cart-names">
        <p id='cart-titles'>ITEM</p>
        <%  basket[0].products.forEach( (i)=> { %>
        <% if (i != null) { %>
        <p> <%= i %></p>
        <% }; %>
        <% });%>
      </div>

      <!--  items sizes -->
      <div class="cart-sizes">
        <p id='cart-titles'>SIZE</p>
        <%  basket[0].sizes.forEach( (i)=> { %>
        <% if (i != null) { %>
        <p> <%= i %></p>
        <% }; %>
        <% });%>
      </div>

      <!--  item quantities-->
      <div class="cart-qtys">
        <p id='cart-titles'>QTY</p>
        <%  basket[0].qtys.forEach( (i)=> { %>
        <% if (i != null) { %>
          <!-- <input type="number" id="qty" name="qty" min="1" value="<%= i %>"> -->
        <p> <%= i %></p>
        <% }; %>
        <% });%>
      </div>

      <!--  items prices -->
      <div class="cart-prices">
        <p id='cart-titles'>PRICE</p>
        <%  basket[0].prices.forEach( (i)=> { %>
        <% if (i != null) { %>
        <p> <%= i %></p>
        <% }; %>
        <% });%>
      </div>


      <!--  remove cart items -->
      <div class="cart-remove-item">
        <p id='cart-titles'>REMOVE</p>
        <%  basket[0].products.forEach( (product, index)=> { %>
        <% if (product != null) { %>
        <form action="/delete" method="post">
          <input type="checkbox" name='checkbox' value='<%= index %>' onChange='this.form.submit()'>
        </form>
        <% }; %>
        <% });%>
      </div>



    </div>

    <div class="total-price-box">
      <p>Total:  Â£ <%= totalPrice %> </p>
    </div>

